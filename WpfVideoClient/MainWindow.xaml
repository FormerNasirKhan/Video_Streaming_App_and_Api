<Window x:Class="WpfVideoClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF Video Player (Web API)" Height="520" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="12">
        <!-- Controls row -->

            <TextBlock Text="Select video:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <ComboBox x:Name="VideoList" Width="320" SelectionChanged="VideoList_SelectionChanged"/>
            <Button Content="Play" Margin="12,0,0,0" Click="Play_Click"/>
            <Button Content="Pause" Margin="6,0,0,0" Click="Pause_Click"/>
            <Button Content="Stop" Margin="6,0,0,0" Click="Stop_Click"/>
            <TextBlock Text="{Binding ElementName=Player, Path=Position, StringFormat=mm\\:ss}" 
                       Margin="12,0,0,0" VerticalAlignment="Center"/>


        <!-- Currently playing URL -->
        <TextBlock x:Name="UrlText"
                   Grid.Row="1"
                   TextWrapping="Wrap"
                   Foreground="Gray"
                   FontSize="12"/>

        <!-- Video area -->
        <Grid Grid.Row="2">
            <!-- MediaElement supports HTTP/HTTPS URIs; it will handle server-side range requests -->
            <MediaElement x:Name="Player"
                          LoadedBehavior="Manual"
                          UnloadedBehavior="Stop"
                          Stretch="Uniform"
                          MediaOpened="Player_MediaOpened"
                          MediaFailed="Player_MediaFailed"/>
        </Grid>
    </Grid>
</Window>
