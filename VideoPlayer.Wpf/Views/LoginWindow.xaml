<Window x:Class="VideoPlayer.Wpf.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - Video Player" Height="550" Width="800"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid>
        <!-- Center content -->
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <!-- User Id -->
            <TextBlock Text="User Id:" Grid.Row="0" Grid.Column="0" 
                       VerticalAlignment="Center" Margin="0,0,8,8"/>
            <TextBox Grid.Row="0" Grid.Column="1" Margin="0,0,0,8"
                     Text="{Binding UserId, UpdateSourceTrigger=PropertyChanged}" />

            <!-- Password -->
            <TextBlock Text="Password:" Grid.Row="1" Grid.Column="0" 
                       VerticalAlignment="Center" Margin="0,0,8,8"/>
            <PasswordBox Grid.Row="1" Grid.Column="1" Margin="0,0,0,8"
                         x:Name="Pwd" PasswordChanged="Pwd_PasswordChanged"/>

            <!-- Login Button -->
            <Button Grid.Row="2" Grid.ColumnSpan="2" 
                    Content="Login" Width="100" 
                    HorizontalAlignment="Center" Margin="0,8,0,8"
                    IsDefault="True" Command="{Binding LoginCommand}" />

            <!-- Error Message -->
            <TextBlock Grid.Row="3" Grid.ColumnSpan="2" 
                       Foreground="Tomato" TextWrapping="Wrap" 
                       HorizontalAlignment="Center"
                       Text="{Binding Error}"/>
        </Grid>
    </Grid>
</Window>
