<Window x:Class="VideoPlayer.Wpf.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Video Player" Height="600" Width="960">
    <Grid Margin="8">

        <!-- Left: list & controls -->
        <DockPanel Grid.Column="0" Margin="0,0,8,0">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0 0 0 8">
                <Button Content="⟳ Refresh" Width="80" Margin="0 0 8 0" Command="{Binding RefreshCommand}" />
                <Button Content="▶ Play" Width="60" Margin="0 0 8 0" Command="{Binding PlayCommand}" />
                <Button Content="⏸ Pause" Width="60" Margin="0 0 8 0" Command="{Binding PauseCommand}" />
                <Button Content="■ Stop" Width="60" Margin="0 0 8 0" Command="{Binding StopCommand}" />
            </StackPanel>

            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0 0 0 8">
                <Button Content="⏮ Prev" Width="60" Margin="0 0 8 0" Command="{Binding PreviousCommand}" />
                <Button Content="⏭ Next" Width="60" Command="{Binding NextCommand}" />
            </StackPanel>

            <ListBox ItemsSource="{Binding Videos}"
                     SelectedItem="{Binding SelectedVideo}"
                     DisplayMemberPath="DisplayName"
                     HorizontalContentAlignment="Stretch" />
        </DockPanel>

        <!-- Right: video & seek bar -->
        <DockPanel Grid.Column="1">
            <MediaElement x:Name="Player"
                          DockPanel.Dock="Top"
                          Height="400"
                          LoadedBehavior="Play" UnloadedBehavior="Manual"
                          Stretch="Uniform"
                          Source="{Binding SelectedVideo.StreamUrl}" />

            <!-- Seek Bar -->
            <Slider Minimum="0"
                    Maximum="{Binding DurationSeconds}"
                    Value="{Binding PositionSeconds, Mode=TwoWay}"
                    Margin="0,8"
                    TickFrequency="1"
                    IsSnapToTickEnabled="True"/>
        </DockPanel>
    </Grid>
</Window>
