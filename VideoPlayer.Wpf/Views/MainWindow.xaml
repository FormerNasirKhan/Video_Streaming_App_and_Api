<Window x:Class="VideoPlayer.Wpf.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Video Player" Height="600" Width="960">
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- Left: Video list -->
            <ColumnDefinition Width="*"/>
            <!-- Right: Player -->
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!-- Main content -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
            <RowDefinition Height="Auto"/>
            <!-- Seek bar -->
        </Grid.RowDefinitions>

        <!-- Video list (left side) -->
        <ListBox Grid.Row="0" Grid.Column="0" Grid.RowSpan="3"
                 ItemsSource="{Binding Videos}"
                 SelectedItem="{Binding SelectedVideo}"
                 DisplayMemberPath="DisplayName"
                 HorizontalContentAlignment="Stretch" />

        <!-- Video player (right side) -->
        <MediaElement x:Name="Player"
                      Grid.Row="0" Grid.Column="1"
                      Height="400"
                      LoadedBehavior="Play" UnloadedBehavior="Manual"
                      Stretch="Uniform"
                      Source="{Binding SelectedVideo.StreamUrl}" />

        <!-- Buttons at bottom (row 1, right side) -->
        <UniformGrid Grid.Row="1" Grid.Column="1" Rows="1" Columns="6" Margin="0,8,0,8">
            <Button Content="⟳ Refresh" Command="{Binding RefreshCommand}" />
            <Button Content="▶ Play" Command="{Binding PlayCommand}" />
            <Button Content="⏸ Pause" Command="{Binding PauseCommand}" />
            <Button Content="■ Stop" Command="{Binding StopCommand}" />
            <Button Content="⏮ Prev" Command="{Binding PreviousCommand}" />
            <Button Content="⏭ Next" Command="{Binding NextCommand}" />
        </UniformGrid>

        <!-- Seek Bar at bottom (row 2, right side) -->
        <Slider Grid.Row="2" Grid.Column="1"
                Minimum="0"
                Maximum="{Binding DurationSeconds}"
                Value="{Binding PositionSeconds, Mode=TwoWay}"
                Margin="0,8,0,0"
                TickFrequency="1"
                IsSnapToTickEnabled="True"/>
    </Grid>
</Window>
